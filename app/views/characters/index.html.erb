<h1>Characters#index</h1>
<p>Find me in app/views/characters/index.html.erb</p>
<% @characters.each do |character| %>
  <ul>
    <%= link_to character.name, character_path(character)  %>
  </ul>
<% end %>

<%= link_to "MAKE CHARACTER", new_character_path  %>

<div class="container">
  <div class="cards">
    <% @characters.each do |character| %>
      <%= link_to character_path(character) do %>
        <div class="card-category zoom" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= character.photo.attached? ? cl_image_path(character.photo.key) : 'http://source.unsplash.com/featured/?warrior' %>)">
          <%= character.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
