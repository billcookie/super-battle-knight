
<div class="container d-flex justify-content-center">
  <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @character.photo.attached? ? cl_image_path(@character.photo.key,width: 100,height: 100,crop: :thumb,gravity: :face) : 'http://source.unsplash.com/featured/?warrior' %>)">
      </div>
      <div class="flip-card-back">
        <h1><%= @character.name%></h1>
        <h3>Age:</h3>
        <p><%= @character.age %></p>
        <h3>Ranking:</h3>
        <p><%= @character.ranking%></p>
        <h3>Bio:</h3>
        <p><%= @character.bio %></p>
        <%= link_to "Create new obligation", new_character_obligation_path(@character), class: 'btn btn-primary mt-3' %>
      </div>
    </div>
  </div>
</div>

<div class="container text-center">
  <h2>Battle Obligations</h2>
  <% @character.obligations.each do |obligation| %>
    <h1><%= obligation.battle.title%></h1>
    <div class="d-flex justify-content-between">
      <div class="flex-card"><%= obligation.battle.fight_date %></p>
    </div>
      <div class="flex-card">
        <p><%= obligation.battle.location %></p>
      </div>
    </div>
  <% end %>
</div>
